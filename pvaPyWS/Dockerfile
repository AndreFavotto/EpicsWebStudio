FROM python:3.12-slim

WORKDIR /app

COPY . .

RUN pip install --no-cache-dir -r requirements.txt

ENV PYTHONUNBUFFERED=1

ARG EPICS_DEFAULT_PROTOCOL=ca
ARG EPICS_CA_ADDR_LIST=127.0.0.1
ARG EPICS_PVA_ADDR_LIST=127.0.0.1

ENV EPICS_DEFAULT_PROTOCOL=${EPICS_DEFAULT_PROTOCOL}
ENV EPICS_CA_ADDR_LIST=${EPICS_CA_ADDR_LIST}
ENV EPICS_PVA_ADDR_LIST=${EPICS_PVA_ADDR_LIST}

EXPOSE 8080

CMD ["python", "pvaPyWS.py"]
